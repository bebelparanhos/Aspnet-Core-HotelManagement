@model App.Web.Models.Entities.Funcionario

<div class="form-row">
    <div class="col-sm-6">
        <h1>Dados do Funcionário</h1>
        <hr />
        <form class="needs-validation" method="POST">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="text" class="form-control" asp-for="Email" placeholder="Email" disabled>
            </div>
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input type="text" class="form-control" asp-for="Nome" placeholder="Nome Completo" required>
            </div>

            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="DataDeNascimento"></label>
                    <input type="date" class="form-control" asp-for="DataDeNascimento" required>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="CPF"></label>
                    <input type="text" class="form-control" asp-for="CPF" required>
                </div>

                <div class="form-group col-sm-2">
                    <label asp-for="Sexo"></label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Sexo" value="1">
                        <label class="form-check-label">Feminino</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Sexo" value="2">
                        <label class="form-check-label">
                            Masculino
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-row">
                
                <div class="form-group col-sm-5">
                    <label asp-for="Nacionalidade"></label>
                    <input class="form-control" type="text" asp-for="Nacionalidade">
                </div>
            </div>
            <h1>Endereço</h1>
            <hr />
            <div class="form-group">
                <label asp-for="Endereco.Logradouro"></label>
                <input type="text" class="form-control" asp-for="Endereco.Logradouro" placeholder="Nome da Rua">
            </div>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label asp-for="Endereco.Numero"></label>
                    <input type="number" class="form-control" asp-for="Endereco.Numero" placeholder="Número">
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Endereco.Complemento"></label>
                    <input type="text" class="form-control" asp-for="Endereco.Complemento" placeholder="Apt, Fundos, etc">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Endereco.Bairro"></label>
                    <input type="text" class="form-control" asp-for="Endereco.Bairro" placeholder="Bairro">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Endereco.Cidade"></label>
                    <input type="text" class="form-control" asp-for="Endereco.Cidade" placeholder="Cidade">
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="Endereco.Estado"></label>
                    <input type="text" class="form-control" asp-for="Endereco.Estado" placeholder="Estado">
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Endereco.Pais"></label>
                    <input type="text" class="form-control" asp-for="Endereco.Pais" placeholder="País">
                </div>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Endereco.Telefone"></label>
                <input type="tel" class="form-control" asp-for="Endereco.Telefone" placeholder="(XX)XXXXXXXXX">
            </div>

            <div class="form-row">
                <button type="submit" name="btn" class="btn btn-info btn-sm">Salvar</button>


            </div>
        </form>
    </div>
</div>
