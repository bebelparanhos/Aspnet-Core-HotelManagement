@model App.Web.ViewModels.Manager.IndexViewModel

@{
    ViewData["Title"] = "Perfil";
}

<h4>@ViewData["Title"]</h4>

@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)

<div class="row div-login">

    <div class="col-4">
        <form method="POST">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input class="form-control" asp-for="UserName" disabled>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email"><br>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input class="form-control" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
  
            <button type="submit" class="btn btn-info">Salvar</button>

        </form>
    </div>
    <div class="col-md-6">
        <a asp-area="" asp-controller="Manager" asp-action="ChangePassword" title="Change Password">Alterar a Senha</a>
    </div>
</div>
