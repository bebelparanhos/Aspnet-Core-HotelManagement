@model Acomodacao

@{
    
    ViewData["Title"] = "Cadastro De Acomodações";
}

<div class="form-row">    
    <div class="col-sm-6">
        <h1>Acomodações</h1>
        <form class="needs-validation" method="POST">
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="inputDescricao" class="control-label" asp-for="Descricao"></label>
                    <input id="inputDescricao" asp-for="Descricao" class="form-control" placeholder="Descrição do Quarto" required />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-2">
                    <label for="inputCapacidade" class="control-label" asp-for="Capacidade"></label>
                    <input id="inputCapacidade" asp-for="Capacidade" class="form-control" />
                    <span asp-validation-for="Capacidade" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-4">
                    <label class="control-label" asp-for="CategoriaId"></label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="@(new SelectList(ViewBag.message, "Id", "Name"))"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-4">
                    <label class="control-label" asp-for="Detalhe.Tamanho"></label>
                    <input type="text" asp-for="Detalhe.Tamanho" class="form-control" />
                    <span asp-validation-for="Detalhe.Tamanho" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="inputObservacao" class="control-label" asp-for="Observacao"></label>
                <textarea cols="72" rows="5" id="inputObservacao" asp-for="@Model.Observacao" class="form-control"></textarea>
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>
            
            <h6>Instalações Existentes</h6>
            <hr />
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@Model.Detalhe.ArCondicionado">
                        <label class="form-check-label" asp-for="Detalhe.ArCondicionado"></label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@Model.Detalhe.Ventilador">
                        <label class="form-check-label" asp-for="Detalhe.Ventilador"></label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@Model.Detalhe.Banheiro">
                        <label class="form-check-label" asp-for="Detalhe.Banheiro"></label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@Model.Detalhe.Cofre">
                        <label class="form-check-label" asp-for="Detalhe.Cofre"></label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@Model.Detalhe.RoupaDeCama">
                        <label class="form-check-label" asp-for="Detalhe.RoupaDeCama"></label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@Model.Detalhe.Armario">
                        <label class="form-check-label" asp-for="Detalhe.Armario"></label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@Model.Detalhe.WiFi">
                        <label class="form-check-label" asp-for="Detalhe.WiFi"></label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@Model.Detalhe.Tomada">
                        <label class="form-check-label" asp-for="Detalhe.Tomada"></label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-info btn-sm"
                       asp-controller="Acomodacao" asp-action="CadastrarAcomodacao">
                <input type="hidden" asp-for="AcomodacaoId" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="ListarAcomodacao">Back to List</a>
</div>
